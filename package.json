{
  "name": "mes",
  "version": "0.3.14",
  "description": "Memo Enhancement Suite (MES)",
  "dependencies": {
    "browserify": "16.2.0",
    "browserify-css": "0.14.0",
    "lodash.get": "4.4.2",
    "node-emoji": "1.8.1",
    "scssify": "3.0.1"
  },
  "devDependencies": {
    "husky": "1.0.0-rc.1",
    "lint-staged": "7.0.4",
    "nodemon": "1.17.3",
    "npm-run-all": "4.1.2",
    "prettier": "1.12.1",
    "pretty-quick": "1.4.1"
  },
  "scripts": {
    "build:browserify": "browserify -t scssify -t browserify-css src/app.js > build/app.js",
    "build:userscript-header": "node scripts/userscript-header.js > build/userscript-header.js",
    "build": "run-s build:browserify build:userscript-header; cat build/userscript-header.js build/app.js > index.js",
    "install": "npm run build",
    "watch-and-copy": "nodemon -w src -w app.css -e js,css -x 'npm run build; cat index.js | pbcopy'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abrkn/mes.git"
  },
  "keywords": [],
  "author": "Andreas Brekken: https://memo.cash/profile/149o1esm1LrYEy1DizZgxANSppx3FESHKw",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abrkn/mes/issues"
  },
  "homepage": "https://github.com/abrkn/mes#readme",
  "browserify-css": {
    "autoInject": false,
    "minify": false,
    "rootDir": "."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build",
      "pre-push": "git fetch origin"
    }
  },
  "prettier": {
    "printWidth": 100,
    "parser": "flow",
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "src/**/*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
